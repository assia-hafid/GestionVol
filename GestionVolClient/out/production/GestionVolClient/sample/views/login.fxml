<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.LoginController">
    <top>
        <HBox alignment="CENTER" prefHeight="58.0" prefWidth="630.0" style="-fx-background-color: #ab47bc;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="Interface Utilisatuer et Réservation" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="416.0" prefWidth="269.0" spacing="20">
            <padding>
                <Insets left="10" right="10" top="20" />
            </padding>
         <ImageView fx:id="logo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Label text="SE CONNECTER : ">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
            </Label>
           <VBox alignment="CENTER" spacing="30.0">
<!--               <Label text="Nom d'utilisateur : " />-->
               <JFXTextField fx:id="userTextField" focusColor="#ab47bc" labelFloat="true" prefHeight="26.0" prefWidth="128.0" promptText="Username" unFocusColor="#790e8b" />
<!--               <Label text="Mot de passe : " />-->
               <JFXPasswordField fx:id="passTextField" focusColor="#ab47bc" labelFloat="true" prefHeight="27.0" prefWidth="151.0" promptText="Password" unFocusColor="#790e8b" />
               <JFXButton fx:id="connexionButton" alignment="CENTER" buttonType="RAISED" onAction="#connexionHandler" prefHeight="42.0" prefWidth="138.0" ripplerFill="#790e8b" style="-fx-background-color: #ab47bc;" text="Connexion" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></JFXButton>
           </VBox>
         <opaqueInsets>
            <Insets right="10.0" />
         </opaqueInsets>
        </VBox>
    </left>

    <right>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20.0" left="54.0" right="54.0" top="20.0" />
            </padding>
            <Label text="INSCRIVEZ-VOUS,C'EST GRATUIT : " textAlignment="CENTER" textFill="#2b013c">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
            </Label>
            <VBox alignment="CENTER" spacing="30.0">
                <!--                <Label text="Username : " />-->
                <JFXTextField fx:id="usernameTextField" focusColor="#ab47bc" labelFloat="true" promptText="Username" unFocusColor="#790e8b" />
                <!--                <Label text="Password : " />-->
                <JFXPasswordField fx:id="passwordField" focusColor="#ab47bc" labelFloat="true" promptText="Password" unFocusColor="#790e8b" />
<!--               <Label text="Nom : " />-->
               <JFXTextField fx:id="nomTextField" focusColor="#ab47bc" labelFloat="true" promptText="Nom" unFocusColor="#790e8b" />
<!--                <Label text="Prénom : " />-->
                <JFXTextField fx:id="prenomTextField" focusColor="#ab47bc" labelFloat="true" promptText="Prénom" unFocusColor="#790e8b" />
<!--                <Label text="Adresse : " />-->
                <JFXTextArea fx:id="adresseTextField" focusColor="#ab47bc" labelFloat="true" prefHeight="170.0" prefWidth="128.0" promptText="Adresse" unFocusColor="#790e8b" />

                <JFXButton fx:id="inscriptionTextField" alignment="CENTER" buttonType="RAISED" onAction="#inscriptionHandler" prefHeight="41.0" prefWidth="198.0" ripplerFill="#790e8b" style="-fx-background-color: #ab47bc;" text="Inscription" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font></JFXButton>
            </VBox>
        </VBox>
    </right>
   <opaqueInsets>
      <Insets top="-10.0" />
   </opaqueInsets>
</BorderPane>
